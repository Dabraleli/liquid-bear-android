<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiquidBearAppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NavigationTextStyle" parent="@style/TextAppearance.AppCompat.Medium" />

    <style name="PreferencesTheme" parent="AppTheme.Base">
        <item name="android:colorBackground">@color/icons</item>
        <item name="android:colorForeground">@color/secondary_text</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/accent</item>
        <item name="android:textColorPrimaryDisableOnly">@color/accent</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>
</resources>

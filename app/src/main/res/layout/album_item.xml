<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dip">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cover_image_view_album_list_item"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:riv_border_color="#fff"
        app:riv_border_width="2dip"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/genre_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_list_item"
        android:layout_gravity="left"
        android:layout_toRightOf="@+id/cover_image_view_album_list_item"
        android:textColor="@drawable/list_item_secondary_text_color"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/text_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cover_image_view_album_list_item"
        android:layout_toRightOf="@+id/cover_image_view_album_list_item"
        android:textColor="@drawable/list_item_text_color"
        android:textSize="16dip" />

</RelativeLayout>
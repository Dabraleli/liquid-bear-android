<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiquidBearAppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:editTextStyle">@style/LiquidBearAppTheme.EditText</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/primary</item>
        <item name="actionMenuTextColor">@color/inverted_primary</item>
        <item name="android:textColorPrimary">@color/inverted_primary</item>
    </style>

    <style name="NavigationTextStyle" parent="@style/TextAppearance.AppCompat.Medium"/>

    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="LiquidBearAppTheme.ProgressBar" parent="AppTheme.Base">
        <item name="colorAccent">@color/icons</item>
        <item name="android:textColorSecondary">@color/accent_semitransparent</item>
    </style>

    <style name="LiquidBearAppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>

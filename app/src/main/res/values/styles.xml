<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiquidBearAppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:editTextStyle">@style/LiquidBearAppTheme.EditText</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/inverted_primary_text</item>
        <item name="android:textColorSecondary">@color/inverted_primary_text</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="NavigationTextStyle" parent="@style/TextAppearance.AppCompat.Medium" />

    <style name="PreferencesTheme" parent="AppTheme.Base">
        <item name="android:colorBackground">@color/icons</item>
        <item name="android:colorForeground">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/accent</item>
        <item name="android:textColorPrimaryDisableOnly">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="LiquidBearAppTheme.ProgressBar" parent="AppTheme.Base">
        <item name="colorAccent">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="LiquidBearAppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
